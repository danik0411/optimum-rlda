# synthetic data

rm(list=ls(all=TRUE));

library("mvtnorm");

n_array = seq( 30 , 150 , by = 10 );
p_array = c(5 , 20 , 50 , 150);
mDist = c( 9, 5, 2, 0.75 );

for ( nCounter in 1:length(n_array) ) {

n = n_array[nCounter];

for ( pCounter in 1:length(p_array) ) {

p = p_array[pCounter];

sigma = array( 0.1 , dim=c( p , p ) );
diag( sigma ) = 1;

for ( mCounter in 1:length(mDist) ) {

dist = mDist[mCounter];

x0 = array( 1 , dim=c( p , 1 ) );     # rowMeans of something
x1 = -x0;      	 	      	     # rowMeans of something

temp = t ( x0 - x1 ) %*% solve( sigma ) %*% ( x0 - x1 );
a = sqrt ( dist / temp );	# mean value

meanVector = rep( a , p );
a1 = rmvnorm( n , mean = meanVector , sigma = sigma );

print( dim(a1) );


}

}

}